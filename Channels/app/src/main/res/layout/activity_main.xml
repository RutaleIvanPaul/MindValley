<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    tools:context=".views.MainActivity">


    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/app_name"
        android:textColor="@color/fontColor"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newepisode_textview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/new_episodes"
        android:textColor="@color/fontColorSecondary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_title" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/itemsswipetorefresh"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newepisode_textview_header">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewNewEpisodes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="@+id/recyclerviewCategories"
            app:layout_constraintStart_toStartOf="parent"></androidx.recyclerview.widget.RecyclerView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <View
        style="@style/Divider"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/dividerColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemsswipetorefresh" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/channel_header"
        android:layout_width="1051dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/itemsswipetorefresh"
        tools:layout_editor_absoluteX="12dp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/channel_header_imageView"
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siShape="@drawable/new_episode_image" />

        <TextView
            android:id="@+id/channel_header_textView"
            android:layout_width="646dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_black"
            android:text="@string/channel_header"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@+id/channel_header_imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/channel_subheader_textView"
            android:layout_width="642dp"
            android:layout_height="18dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:text="@string/channel_header"
            android:textColor="@color/fontColorSecondary"
            app:layout_constraintStart_toEndOf="@+id/channel_header_imageView"
            app:layout_constraintTop_toBottomOf="@+id/channel_header_textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewChannels"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/browseCategoriesTextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channel_header">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        style="@style/Divider"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/dividerColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerviewChannels" />

    <TextView
        android:id="@+id/browseCategoriesTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/categories_browse"
        android:textColor="@color/fontColorSecondary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerviewChannels" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerviewChannels"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/recyclerviewChannels"
        app:layout_constraintTop_toBottomOf="@+id/browseCategoriesTextview"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>